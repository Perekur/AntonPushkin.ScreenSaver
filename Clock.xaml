        <!-- Animate seconds arrow -->
        <Storyboard x:Key="SecondsArrowAnimation">
            <DoubleAnimation By="6" Duration="00:00:00.5" RepeatBehavior="Forever" Storyboard.TargetName="AngleSecondArrow" Storyboard.TargetProperty="Angle" >
                <DoubleAnimation.EasingFunction>
                    <ElasticEase Oscillations="3" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ClockBackgroundDrawing -->
        <!--<Image Source="{DynamicResource ClockBackgroundDrawing}" Grid.Row="1" Grid.Column="1" Opacity="1"/>-->

        <!-- Hours -->
        <Grid Width="10" HorizontalAlignment="Center" Grid.Column="1"  Grid.Row="1" RenderTransformOrigin="0.5,0.5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.RenderTransform>
                <RotateTransform x:Name="AngleHourArrow" Angle="180"/>
            </Grid.RenderTransform>

            <Rectangle Stroke="{DynamicResource ClockForegroundBrush}" Fill="{DynamicResource ClockForegroundBrush}" Grid.Row="1" Grid.RowSpan="2"/>
        </Grid>


        <!-- Minutes -->
        <Grid Width="10" HorizontalAlignment="Center" Grid.Column="1"  Grid.Row="1" RenderTransformOrigin=".5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.RenderTransform>
                <RotateTransform x:Name="AngleMinuteArrow" Angle="0"/>
            </Grid.RenderTransform>

            <Rectangle Stroke="{DynamicResource ClockForegroundBrush}"/>
        </Grid>


        <!-- Second -->
        <Grid Width="4" HorizontalAlignment="Center" Grid.Column="1"  Grid.Row="1" RenderTransformOrigin="0.5,0.5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.RenderTransform>
                <RotateTransform x:Name="AngleSecondArrow" Angle="270"/>
            </Grid.RenderTransform>

            <Rectangle Stroke="RED" Fill="Red" Margin="0,-20"/>
        </Grid>

        <Ellipse HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="20" Stroke="{DynamicResource ClockForegroundBrush}" Grid.Row="1" Grid.Column="1" Fill="{DynamicResource ClockBackgroundBrush}"/>

        <!-- Time -->
        <!--<Border BorderBrush="{DynamicResource ClockForegroundBrush}" BorderThickness="1" CornerRadius="9" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,-25">
            <TextBlock x:Name="txtTime" Text="00:00:00" Foreground="{DynamicResource ClockForegroundBrush}" FontSize="19" Margin="15, 0" />
        </Border>-->

        <!-- Numbers -->
        <Image Source="{DynamicResource ClockDrawingImage}" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
    </Grid>
</UserControl>
